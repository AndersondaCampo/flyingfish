{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",
    "lib": [
      "ES2015",
      "ES2016.Array.Include",
      "ES2017.Object",
      "ES2017.String"
    ],
    "outDir": "./dist",
    "downlevelIteration": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "moduleResolution": "node",

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "files": [
    "./node_modules/njs-types/ngx_http_js_module.d.ts",
    "./node_modules/njs-types/ngx_stream_js_module.d.ts",
    "./node_modules/njs-types/njs_core.d.ts",
    "./node_modules/njs-types/njs_modules/crypto.d.ts",
    "./node_modules/njs-types/njs_modules/fs.d.ts"

  ]
}